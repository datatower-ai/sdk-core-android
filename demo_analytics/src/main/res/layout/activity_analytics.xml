<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ROIQuerySDK.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.ROIQuerySDK.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            app:layout_constraintBottom_toTopOf="@id/button_flush"
            android:text="track_test"
            />

        <Button
            android:id="@+id/button_track_ad_show"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/button_track"
            android:layout_height="wrap_content"
            android:text="ad_show"
            />

        <Button
            android:id="@+id/button_track_ad_click"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/button_track"
            android:layout_height="wrap_content"
            android:text="ad_click"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_track_page_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            app:layout_constraintBottom_toTopOf="@id/button_flush"
            android:text="page_close"
            />

        <Button
            android:id="@+id/button_track_app_close"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/button_track"
            android:layout_height="wrap_content"
            android:text="app_close"
            />

        <Button
            android:id="@+id/button_flush"
            android:layout_width="wrap_content"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:layout_toRightOf="@+id/button_track"
            android:layout_height="wrap_content"
            android:text="flush"
            />


    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.jraska.console.Console
            android:layout_width="match_parent"
            android:layout_marginBottom="60dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/button_clear_log"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:text="clear log"
            />

    </RelativeLayout>

</LinearLayout>